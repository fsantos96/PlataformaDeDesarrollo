@page "/listaTarea"


@using BlazorApp1.Data;
@inject TareaService TareaService
    <h3>ListaTarea</h3>


    @if (listadoTarea == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Estimacion</th>
                    <th>Vencimento</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarea in listadoTarea)
                {
                    <tr>
                        <td>@tarea.Id</td>
                        <td>@tarea.Titulo</td>
                        <td>@tarea.Estimacion</td>
                        <td>@tarea.Vencimiento</td>
                        <td>@tarea.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @code {
        private BlazorApp1.Data.Tarea[] listadoTarea;

        protected override async Task OnInitializedAsync()
        {
            listadoTarea = await TareaService.getTareas();
        }
    }
